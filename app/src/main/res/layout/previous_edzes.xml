<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/gyakorlatSzama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="1."
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="18dp"
        />

    <TextView
        android:id="@+id/ismetles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50"
        android:textSize="22sp"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/gyakorlatSzama"
        />

    <TextView
        android:id="@+id/szorzas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x"
        android:textSize="25sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/ismetles"
        />

    <TextView
        android:id="@+id/gyakorlatNeve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gyakorlat"
        android:layout_marginTop="18dp"
        android:textSize="22sp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/szorzas"
        />

    <TextView
        android:id="@+id/suly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50"
        android:textSize="22sp"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="15dp"
        android:layout_toLeftOf="@id/kilo"
        />

    <TextView
        android:id="@+id/kilo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kg"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>